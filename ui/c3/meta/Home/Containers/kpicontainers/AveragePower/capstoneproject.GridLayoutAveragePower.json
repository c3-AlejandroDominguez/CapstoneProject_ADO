      },
      "contextVars": {
        "SelectedCity": {
          "type": "UiSdlPageParam",
          "path" : "capstoneproject.dropdownfilterValue"
        }
      }
    }
  },
  "id": "capstoneproject.GridLayoutAveragePower"
}